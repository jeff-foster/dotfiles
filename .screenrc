shell -$SHELL
startup_message off
vbell off

# Change scrollback to 10000 lines
defscrollback 10000

# status line at the bottom
hardstatus on
hardstatus alwayslastline

# # Display a caption string below, appearing like tabs and
# # displaying the window number and application name (by default).
caption always
caption string "%{kw}%-w%{wr}%n %t%{-}%+w"

# # Default screens
screen -t bash
screen -t Git
screen -t Markup
screen -t CSS
screen -t Compass
screen -t Server
screen -t Console
